<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/LLbusquedaprod">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText2" android:layout_weight="1" android:hint="@string/buscar_productos"
                android:importantForAutofill="no"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_search"
                android:id="@+id/imageButton2" android:layout_weight="1" android:contentDescription="@string/buscar_productos"/>
    </LinearLayout>
    <ImageButton
            android:layout_width="409dp"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/imageButton4" android:layout_alignParentBottom="true" android:layout_marginBottom="1dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp" android:contentDescription="@string/cargar_producto"/>
    <Button
            android:text="@string/busqueda_de_productos_por_qr"
            android:layout_width="406dp"
            android:layout_height="wrap_content" android:id="@+id/button" android:layout_alignParentEnd="true"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="56dp" android:layout_alignTop="@id/LLbusquedaprod"
            android:contentDescription="@string/busqueda_de_productos_por_qr"/>
</RelativeLayout>
