<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".listProductActivity">




    <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/botondeuso"
            android:onClick="cancel"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/botondeuso"
            android:onClick="saveProduct"
            app:srcCompat="@android:drawable/ic_menu_save" />

    <EditText
            android:id="@+id/et_id"
            android:layout_width="407dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="@string/identificador"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/et_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_id"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="CategorÃ­a"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/et_marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_categoria"
            android:ems="10"
            android:hint="Marca"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/et_detalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_marca"
            android:ems="10"
            android:hint="Detalles"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/et_costo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_detalles"
            android:ems="10"
            android:hint="Costo"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/et_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_costo"
            android:ems="10"
            android:hint="Precio"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/et_medida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_precio"
            android:ems="10"
            android:hint="Medida"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/et_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_medida"
            android:ems="10"
            android:hint="Cantidad"
            android:inputType="textPersonName" />
</RelativeLayout>